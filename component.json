{
  "title": "EBSTool",
  "description": "elastic.io component for the Petstore API",
  "docsUrl": "",
  "credentials": {
		"fields": {
      "databaseUrl": {
				"label": "Database URL",
				"required": true,
        "viewClass": "TextFieldView"
        },
			"username": {
				"label": "Database UserName",
				"required": true,
				"viewClass": "TextFieldView"
			},
			"password": {
				"label": "Password",
				"required": true,
				"viewClass": "TextFieldView"
			}		      
	},
	"verifier": "io.elastic.AppKeyVerifier"
	},
  "triggers": {
    "getAllCustomer": {
      "main": "io.elastic.triggers.GetAllCustomer",
      "type": "polling",
      "title": "Get all customer details",
      "description": "Get all customer details",
      "metadata": {
        "out": "./schemas/CreateCustomer.out.json"
      }
    }
  },
  "actions": {
    "CreateAllCustomer": {
      "main": "io.elastic.actions.CreateAllCustomer",
      "title": "Create a customer",
      "description": "Creates a new customer",
      "metadata": {
        "in": "./schemas/CreateCustomer.in.json",
        "out": "./schemas/CreateCustomer.out.json"
      }
    }
  }
}
